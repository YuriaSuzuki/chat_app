<h2>Chatを始めよう</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.text_field :name, placeholder: "ユーザー名", autofocus: true  %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "メールアドレス"%>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, placeholder: "パスワード", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "パスワード確認", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
