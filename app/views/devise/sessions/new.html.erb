<div class="login_wrapper">
  <div class="form_wrapper">
    <h2 class="login_title">Chatにログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, class: "form-controll" %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password, placeholder: "パスワード", autocomplete: "off", class: "form-controll" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインしたままにする", class: "login-label"%>
        </div>
      <% end -%>

      <div class="form-group actions">
        <%= f.submit "ログイン", class: "login-info login-btn btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="image_wrapper">
    <%= image_tag("sign_in_image.png") %>
  </div>
</div>
